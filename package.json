{
    "name": "nera",
    "version": "4.2.0",
    "description": "A simple static site generator",
    "main": "index.js",
    "scripts": {
        "start": "nodemon",
        "serve": "vite",
        "lint": "eslint .",
        "render": "node index.js",
        "preserve": "npm run render",
        "watch:assets": "node src/watch-assets.js",
        "test": "vitest",
        "dev": "npm run render && concurrently -k -n 'vite,watch,server' -c blue,magenta,green \"npm:serve\" \"npm:watch:assets\" \"npm:start\""
    },
    "type": "module",
    "keywords": [
        "static-site-generator",
        "markdown",
        "pug",
        "jamstack",
        "blog",
        "documentation",
        "website",
        "ssg"
    ],
    "author": "Michael Becker <micha.becker79@gmail.com> (https://github.com/seebaermichi)",
    "license": "ISC",
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seebaermichi/nera"
    },
    "dependencies": {
        "cpy": "^11.1.0",
        "fs-readdir-recursive": "^1.1.0",
        "gray-matter": "^4.0.3",
        "markdown-it": "^14.1.0",
        "markdown-it-meta": "^0.0.1",
        "pretty": "^2.0.0",
        "pug": "^3.0.2",
        "rimraf": "^6.0.1",
        "yaml": "^2.4.1"
    },
    "devDependencies": {
        "chokidar": "^4.0.3",
        "concurrently": "^9.2.0",
        "dotenv": "^17.2.0",
        "eslint": "^9.31.0",
        "husky": "^9.1.7",
        "nodemon": "^3.0.3",
        "npm-run-all": "^4.1.5",
        "vite": "^6.3.5",
        "vitest": "^3.2.4"
    }
}
